@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" , @class = "navbar-nav ml-md-auto"}))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav ml-md-auto">
        <li class="nav-link">
            Текущий пользователь: @User.Identity.GetUserName()
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Выйти</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav ml-md-auto">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
